#include <avr/io.h>
#include "avr/interrupt.h"
void T0Delay();
void T0DelayCTC();
void Blinking();
void BlinkingCTC();
int ct=0;
int main(void)
{
     /* Replace with your application code */
	 
	 TCCR0A = 0x02;
	 TCCR0B = 0x07;
	 TCCR1A=0x00;
	 TCCR1B=0x09;
	 TIMSK0=0x02;
	 OCR0A=0x01;
	 TIMSK1 = 0x02;
	 OCR1AH=0x3E;
	 OCR1AL=80;
	 sei();
	 sei();
	 DDRD = 0x00;
	 DDRC = 0xFF;
	 
	 
	 
     while(1){
		 if(ct==0){
	     DDRB=0xFF;
	     DDRC=0xFF;
	     PORTB |=(1<<1);
	     PORTB |=(1<<3);
	     PORTC |=(1<<5);}
	    
	    if(ct==5000) {
			DDRB=0xFF;
			DDRC=0xFF;
	     PORTB &=~(1<<3);
	     PORTB|=(1<<5);}
	     
		 
	     if(ct==6000){
		 DDRB=0xFF;
	     DDRC=0xFF;
	     PORTB&=~(1<<5);
	     PORTB|=(1<<4);}
	     
		 
	     if(ct==7000){
			 DDRB=0xFF;
			 DDRC=0xFF;
	     PORTB|=(1<<2);}
	     
	     
		 if(ct==8000){
			 DDRB=0xFF;
			 DDRC=0xFF;
	     PORTC &=~(1<<5);
	     PORTC |=(1<<4);
	     PORTB |=(1<<0);
	     PORTB &=~(1<<1);
	     PORTB &=~(1<<2);}
	     
	     
		 if(ct==13000){
			 DDRB=0xFF;
			 DDRC=0xFF;
	     PORTB |=(1<<2);
	     PORTB &=~(1<<0);}
	     
		     
		     
		     
	     if(ct==13000||ct==13100||ct==13200||ct==13300||ct==13400||ct==13500||ct==13600||ct==13700||ct==13800||ct==13900){
		     DDRB=0xFF;
		     DDRC=0xFF;
			 PORTC = PORTC^(1<<PORTC4);
	     }
	     
	     
	     if(ct==14000){
			 DDRB=0xFF;
			 DDRC=0xFF;
			PORTC &= ~(1<<4);
	     PORTC |= (1<<5);
	     PORTB &=~(1<<2);
	     PORTB |=(1<<1);}
	     
	     if(ct==15000){
			 DDRB=0xFF;
			 DDRC=0xFF;
	     PORTB |= (1<<5);}
	    
		 if(ct==16000){
	     PORTB=0x00;
	     PORTC=0x00;
		 ct=0;
		 }
	 }
	 
}


ISR (TIMER0_COMPA_vect)
{
	if((PORTC &(1<<0))==0)
	{
		
		PORTC |= (1<<0);
	}
	else
	{
		
		PORTC &=~(1<<0);
	}
}

ISR (TIMER1_COMPA_vect)
{
	ct++;
}
